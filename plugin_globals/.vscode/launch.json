  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run/Debug Plugin",
      "type": "python",
      "request": "launch",
       "module": "acapy_agent",
      "justMyCode": false,
      "args": ["start", "--arg-file=${workspaceRoot}/docker/default.yml"]
    },
    {
      "name": "ruff - plugin_globals",
      "type": "python",
      "request": "launch",
      "module": "ruff",
      "console": "integratedTerminal",
      "sudo": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/plugin_globals",
      "args": ["check", "."]
    },
    {
      "name": "ruff fix - plugin_globals",
      "type": "python",
      "request": "launch",
      "module": "ruff",
      "console": "integratedTerminal",
      "sudo": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/plugin_globals",
      "args": ["check", ".", "--fix"]
    }
  ]
}
